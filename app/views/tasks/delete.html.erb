<h1><%= "Are you sure you want to delete this task?" %>
</h1>

<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>
<% end %>

<h3><%= link_to "Delete this task", task_destroy_path, method: :delete%>
</h3>

<h3><%= link_to "I changed my mind, Take me Back to All Tasks", tasks_path %>
</h3>
